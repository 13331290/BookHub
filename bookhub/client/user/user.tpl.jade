div.pusher
	div.user-info-banner
		div.userphoto
			img.ui.small.circular.image(src="/img/head.jpg")
		div.username
			h2 {{user.profile.pseudonym}}
	div.main.container
		div.ui.secondary.pointing.menu
			a.item.active(data-tab='self-created') 创建的小说
			a.item(data-tab='forked') 编辑的小说
		div.ui.segment.tab.self-created.active(data-tab='self-created')
			div.ui.page.grid
				each selfbooks
					div.four.wide.column
						div.book
							div.book-bottom-shadow
								img.bookface-size.bookface(src='/img/default-bookface.jpg')
							p.bookname 《{{name}}》
							p.book_id(hidden) {{_id}}
				div.four.wide.column
					div.ui.green.icon.button.bookface-size.create-book-btn
						i.huge.plus.icon
						p 开创一部小说
		div.ui.segment.tab.forked(data-tab='forked')
			div.ui.page.grid
				div.four.wide.column
					div.book
						div.book-bottom-shadow
							img.bookface-size.bookface(src='/img/book5.jpg')
						p.bookname 《我欲封天》
				div.four.wide.column
					div.book
						div.book-bottom-shadow
							img.bookface-size.bookface(src='/img/book6.jpg')
						p.bookname 《那片星空那片海》
				div.four.wide.column
					div.book
						div.book-bottom-shadow
							img.bookface-size.bookface(src='/img/book7.jpg')
						p.bookname 《林徽因传》
				div.four.wide.column
					div.book
						div.book-bottom-shadow
							img.bookface-size.bookface(src='/img/book8.jpg')
						p.bookname 《豪门绝恋》
		div.ui.segment.chapterSelect(id='chapterSelect')
			div.ui.black.ribbon.label.selected-book ?
			div.ui.aligned.center.header.msg 请选择一本书
