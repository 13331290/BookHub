head
	meta(charset='UTF-8')
	title BookHub
body.pushable
	+menu_sidebar

template(name='home')
	div.pusher.home
		div.title.animated.bounceInLeft
			p Bookhub
		div.follow.animated.bounceInRight
			p For joy and creativity.
		div.homepage-info
			div.circle.book
				div.num.book-num {{book}}
				p Books
			div.circle.update
				div.num.update-num {{update}}
				p Updates
			div.circle.author
				div.num.author-num {{author}}
				p Authors
			div.circle.contributor
				div.num.contributor-num {{contributor}}
				p Contributors	
		img.homepage(src='/img/home.jpg')
		